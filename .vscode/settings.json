{
    // 1、自动保存设置
    "files.autoSave": "onFocusChange",
    // 2、每行字符长度120
    "editor.rulers": [
    120
    ],
    // 3、鼠标缩放
    "editor.mouseWheelZoom": true,
    // 4、显示bash输出窗
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
          // 自己的安装路径, 是bin下的bash.exe
          "path": "D:\\Programs\\Git\\bin\\bash.exe",
            // 使自定义命令的别名生效
            "args": [],
            "overrideName": true,
        },
        "msys2": {
          // 自己的安装路径, 是msys2下的msys2.exe
          "path": "C:\\msys2\\msys2.exe",
            // 使自定义命令的别名生效
          "args": [],
          "overrideName": true,
        },
        "mingw64": {
          // 自己的安装路径, 是msys2下的mingw64.exe
          "path": "C:\\msys2\\mingw64.exe",
            // 使自定义命令的别名生效
            "args": [],
            "overrideName": true,
        },
        "msys2_bash_test": {
            "path": "C:\\msys2\\usr\\bin\\bash.exe",
            "icon": "terminal-debian",
            "color": "terminal.ansiCyan",
            "overrideName": true,
        },
      },
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    // 5、设置高亮文本显示
    "highlightwords.colors": [
      { "light": "#b3d9ff", "dark": "cyan" },
      { "light": "#e6ffb3", "dark": "pink" },
      { "light": "#b3b3ff", "dark": "lightgreen" },
      { "light": "#ffd9b3", "dark": "magenta" },
      { "light": "#ffb3ff", "dark": "cornflowerblue" },
      { "light": "#b3ffb3", "dark": "orange" },
      { "light": "#ffff80", "dark": "green" },
      { "light": "#d1e0e0", "dark": "red" }                                        
    ],
    "highlightwords.box": {
        "light": false,
        "dark": true
    },
    "highlightwords.defaultMode": {
        "default": 0
    },
    "workbench.iconTheme": "vscode-icons",
    "editor.renderWhitespace": "all",
    "explorer.confirmDelete": false,
    "terminal.integrated.automationProfile.windows": {
    

        

    },
    "editor.detectIndentation": false,
    "security.workspace.trust.untrustedFiles": "open",
    "vsicons.dontShowNewVersionMessage": true,
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "workbench.editorAssociations": {
        "*.pdf": "pdf.preview",
        "*.bep": "default",
        "*.dll": "default",
        "*.ui": "default"
    },
    "cmake.configureOnOpen": true,
    "[python]": {
        "editor.formatOnType": true
    },
    "nsis.compiler.pathToMakensis": "D:\\Program Files (x86)\\NSIS\\makensis.exe",
    "gitlens.views.commitDetails.files.layout": "list",
    "Codegeex.Privacy": true,
    "svg.preview.mode": "img",
    "workbench.colorTheme": "Default Dark+",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "right"
    },
    "debug.onTaskErrors": "debugAnyway",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "files.associations": {
        "array": "cpp",
        "atomic": "cpp",
        "*.tcc": "cpp",
        "bitset": "cpp",
        "cctype": "cpp",
        "chrono": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "codecvt": "cpp",
        "condition_variable": "cpp",
